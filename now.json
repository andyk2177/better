{
  "version": 2,
  "name": "better",
  "alias": "betterlms.com",
  "env": {
    "MYSQL_URL": "@mysql-url"
  },
  "build": {
    "env": {
      "MYSQL_URL": "@mysql-url"
    }
  },
  "builds": [
    {
      "src": "api/src/index.ts",
      "use": "@now/node@canary",
      "config": {
        "maxLambdaSize": "25mb"
      }
    },
    { "src": "www/package.json", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/index.ts"
    },
    { "src": "/(.*)", "dest": "/www/$1" }
  ]
}
