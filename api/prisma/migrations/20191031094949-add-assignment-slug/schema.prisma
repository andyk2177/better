datasource db {
  provider = "mysql"
  url = "***"
}

generator photonjs {
  provider = "photonjs"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  picture   String?
  courses   Course[]
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Course {
  id                  String          @id @default(cuid())
  parent              String?
  name                String
  title               String?
  description         String?
  term                Int
  slug                String?         @unique
  subject             String
  catalog_number      Int
  component           String
  class_number        Int             @unique
  users               User[]
  content             Content[]
  messages            CourseMessage[]
  assignments         Assignment[]
  synapse_instance_id Int
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
}

model CourseMessage {
  id        String   @id @default(cuid())
  course    Course
  user      User
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  PROFESSOR
  TEACHING_ASSISSTANT
  STUDENT
}

model Content {
  id        String      @id @default(cuid())
  course    Course
  title     String
  type      ContentType
  url       String?
  text      String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum ContentType {
  TEXT
  FILE
  UNIT
}

model Assignment {
  id        String   @id @default(cuid())
  slug      String
  course    Course
  name      String
  points    Int
  grades    Grade[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Grade {
  id           String     @id @default(cuid())
  user         User
  course       Course
  assignment   Assignment
  letter_grade String
  points       Float
  percent      Float
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}